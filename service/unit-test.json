{
    "clearMocks": true,
    "resetMocks": true,
    "collectCoverage": true,
    "coverageDirectory": "build/test/coverage",
    "roots": [
        "src"
    ],
    "testMatch": [
        "**/__tests__/**/*.js"
    ],
    "testEnvironment": "node",
    "verbose": true,

    "reporters": [
        "default",
        [
            "jest-junit",
            {
                "suiteName": "Unit Tests",
                "outputDirectory": "build/test/reports/unit",
                "outputName": "./results.xml"
            }
        ]
    ]
}
