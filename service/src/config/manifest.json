{
    "env": {
        "doc": "The environment to run in",
        "format": [
            "production",
            "development",
            "test"
        ],
        "default": "development",
        "env": "NODE_ENV"
    },
    "http": {
        "port": {
            "doc": "The port to listen on",
            "format": "port",
            "default": 3000,
            "env": "PORT"
        }
    },
    "postgres": {
        "uri": {
            "doc": "The database connection string",
            "default": "",
            "env": "PG_URI"
        }
    }
}
